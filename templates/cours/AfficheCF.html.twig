{% extends 'base-front.html.twig' %}








{% block stylesheets %} {% endblock %}
{% block body %}
    <section class="pricing-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-title">
                        <span>Nos Salles et Cours</span>
                        <h2>Visez plus haut avec nos cours</h2>
                    </div>
                </div>
            </div>
            <div class="col-lg-15 col-md-15">
                <div class="ps-item">

                    <div >
                        <input  id="myInput" type="text"  >

                    </div>

                    <section >
                        <br><br><section >
                            <br><br>

                            <div style="margin-left:1000px;">
                                <a class="btn btn-info" href="{{path('listC')}}"> Exporter PDF </a>
                            </div>

                            <br> </br>

                            {%  for c in cours %}

                                <table class="container">
                                    <tbody id="myTable">
                                    <tr>
                                        <td>

                                            <img src="{{ asset('uploads/' ~ c.ImageC ) }}" >
                                            <h3  style="text-align: center">{{c.NiveauC}}</h3>
                                            <h4 style="text-align: center">{{ c.getHeureDebutC()|date('d-m-Y H:i:s') }}</h4>
                                            <h4 style="text-align: center">{{c.TypeC}}</h4>
                                            <br> </br>
                                        </td>
                                    </tr>
                                    </tbody>
                                </table>
                            {% endfor %}

                            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
                            <script>
                                $(document).ready(function(){
                                    $("#myInput").on("keyup", function() {
                                        var value = $(this).val().toLowerCase();
                                        $("#myTable tr").filter(function() {
                                            $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                                        });
                                    });
                                });
                            </script>

                        </section>


                    </section>


                </div>
            </div>

        </div>
        <section class="pricing-section spad">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="section-title">
                            <span>Nos Salles et Cours</span>
                            <h2>Visez plus haut avec nos cours</h2>
                        </div>
                    </div>
                </div>
                <div class="col-lg-15 col-md-15">
                    <div class="ps-item">

                        <div >
                            <input  id="myInput" type="text"  >

                        </div>

                        <section >
                            <br><br><section >
                                <br><br>


                                {%  for s in salle %}

            <table class="container">
                <tbody id="myTable">
                <tr>
                    <td>


                        <h3  style="text-align: center">{{ s.NomS}}</h3>
                        <h4 style="text-align: center">{{ s.CapaciteS }}</h4>
                        <h4 style="text-align: center">{{s.nbCoursMaxS}}</h4>
                        <br> </br>
                    </td>
                </tr>
                </tbody>
            </table>

            </section>

                {% endfor %}
{% endblock %}
        {% block javascripts %} {% endblock %}