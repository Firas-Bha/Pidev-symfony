{% extends 'base-front.html.twig' %}
        {% block body %}
            <section class="classes-section spad">
            <div class="container">
            <div class="row">
            <div class="col-lg-12">

            <div class="section-title">
                <span>Reclamation</span>
            </div>
            {{ form_start(contactForm) }}
            <table class="table table-dark">
                <tbody>
                <div class="container h-100">
                    <div class="row align-items-center h-100">
                        <div class="ts_text">
                            <tr>
                                <th scope="row">{{ form_label(contactForm.nom) }}</th>
                                <td>{{ form_widget(contactForm.nom) }} </td>
                                <td>{{ form_errors(contactForm.nom) }}</td>
                            </tr>
                            <tr>
                                <th scope="row">{{ form_label(contactForm.email) }}</th>
                                <td>{{ form_widget(contactForm.email) }} </td>
                                <td>{{ form_errors(contactForm.email) }}</td>
                            </tr>
                            <tr>
                                <th scope="row">{{ form_label(contactForm.message) }}</th>
                                <td>{{ form_widget(contactForm.message) }} </td>
                                <td>{{ form_errors(contactForm.message) }}</td>
                            </tr>
                        </div>
                    </div>
                </div>   </tbody>
            </table>


            {{ form_end(contactForm) }}

        {% endblock body %}