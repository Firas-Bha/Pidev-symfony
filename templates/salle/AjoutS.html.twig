{% extends 'base-back.html.twig' %}

{% block body %}


    {{ form_start(fo, {attr: {'novalidate': 'novalidate'}}) }}
    <div class="container-fluid pt-4 px-4">
        <div class="row g-4 h-100 align-items-center justify-content-center">
            <div class="col-sm-12 col-xl-6">
                <div class="bg-light rounded h-100 p-4">

                    <h1 align="center" class="p-2 mb-2 bg-info text-white">{% trans %}Ajouter Salle{% endtrans %}</h1>
                    <button type="submit" class="btn btn-square btn-outline-secondary m-2"><a href="{{ path('afficheS') }}"><i class="fa fa-home"></i></a></button>
                    <table>
                        <tr>
                            <th scope=row"> {{ form_label(fo.Id,"Numero") }} </th>
                            <td> {{ form_widget(fo.Id ,  {'attr': {'class': 'form-control form-control-user' , 'placeholder' : '0000'}}) }} </td>
                            <td>{{ form_errors(fo.Id) }} </td>
                        </tr>
                        <tr>
                            <th scope=row"> {{ form_label(fo.Surface,"Surface") }} </th>
                            <td> {{ form_widget(fo.Surface,  {'attr': {'class': 'form-control form-control-user' , 'placeholder' : ''}}) }} </td>
                            <td>{{ form_errors(fo.Surface) }} </td>
                        </tr>
                        </tr>
                        <th scope=row"> {{ form_label(fo.NomS,"Nom") }} </th>
                        <td>{{ form_widget(fo.NomS,  {'attr': {'class': 'form-control form-control-user' , 'placeholder' : ''}}) }} </td>
                        <td>{{ form_errors(fo.NomS) }} </td>
                        </tr>
                        <tr>
                            <th scope=row"> {{ form_label(fo.CapaciteS,"Capacite") }} </th>
                            <td>{{ form_widget(fo.CapaciteS,  {'attr': {'class': 'form-control form-control-user' , 'placeholder' : ''}}) }} </td>
                            <td> {{ form_errors(fo.CapaciteS) }} </td>
                        </tr>
                        <tr>
                            <th scope=row"> {{ form_label(fo.description,"Description") }} </th>
                            <td>{{ form_widget(fo.description,  {'attr': {'class': 'form-control form-control-user' , 'placeholder' : ''}}) }} </td>
                            <td> {{ form_errors(fo.description) }} </td>
                        </tr>
                        <tr>
                            <th scope=row"> {{ form_label(fo.nbCoursMaxS,"Nombre max de cours") }} </th>
                            <td>{{ form_widget(fo.nbCoursMaxS,  {'attr': {'class': 'form-control form-control-user' , 'placeholder' : ''}}) }} </td>
                            <td> {{ form_errors(fo.nbCoursMaxS) }} </td>
                        </tr>

                    </table>

                <div align="center" class="form-group mb-0">
                    <div class="checkbox checkbox-secondary">
                        {{ form_widget(fo) }}
                        <button id="checkout-button" type="submit" class="btn btn-info text-white" ><i class="fe fe-check mr-2 text-white"></i>Ajouter</button>
                    </div>
                </div>
                </div>
            </div>

        </div>
    </div>

    {{ form_end(fo) }}
{% endblock %}